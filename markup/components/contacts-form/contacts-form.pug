mixin contacts-form(data)
    section.contacts-form

        .contacts-form__container

            .contacts-form__wrapper

                h2.contacts-form__title Обратная связь
                p.contacts-form__text Будем Вам благодарны за отзывы о товаре, работе наших подразделений и менеджеров

                .contacts-form__row

                    .contacts-form__error
                        .error
                            span Введите корректное поле «Ваше имя»
                        .error
                            span Введите корректное вашу почту

                    .contacts-form__field
                        label.contacts-form__label(for="name") Ваше имя
                        input.contacts-form__input(id="name" placeholder="Александр")

                    .contacts-form__field
                        label.contacts-form__label(for="phone") Ваш телефон
                        input.contacts-form__input.phone-mask(id="phone")

                .contacts-form__row

                    .contacts-form__field
                        label.contacts-form__label(for="email") Ваша почта
                        input.contacts-form__input(id="email" placeholder="support@gmail.com")

                    .contacts-form__field
                        label.contacts-form__label(for="theme") Тема письма
                        input.contacts-form__input(id="theme" placeholder="Вопрос сотрудничества")

                .contacts-form__textarea
                    label.contacts-form__label(for="text") Сообщение
                    textarea(id="text" placeholder="Начните писать")


                .contacts-form__file-upload
                    +file-upload('paperclip', 'Загрузите файл <i>до 30 мб</i>', 1)


                .contacts-form__file-checkbox
                    +field-checkbox([
                        {
                            title: 'Я даю согласие на обработку моих персональных данных',
                            attrs: {
                                name: 'check0',
                            }
                        },
                    ])


                button(type="submit").btn.btn--purple.btn--icon-arrow Отправить

mixin file-upload(icon, text, num)
    .file-upload
        input.file-upload__inputfile.js-inputfile(type='file', name='file-1', data-multiple-caption='{count} files selected', multiple='' id=`file-${num}`)
        label(for=`file-${num}`)
            .file-puload__icon
                != pugHelpers.Icon.call(locals, {iconName: icon, className: icon, iconWidth: "18", iconHeight: "18"})
            span!=text

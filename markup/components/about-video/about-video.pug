mixin about-video(data)
    .about-video
        .about-video__big

            .about-video__big-wrap

                a(data-fancybox href="https://www.youtube.com/watch?v=_sI_Ps7JSEk").about-video__big-link

                    img(src="%=static=%img/assets/about-video/video.jpg" alt="alt")

                    .about-video__big-descr

                        p.about-video__big-text Посмотрите 5 минутное видео о компании BUMFA GROUP

                        span.about-video__btn


        .about-video__small

            .about-video__small-wrap

                a(data-fancybox href="https://vimeo.com/191947042").about-video__img
                    img(src="%=static=%img/assets/about-video/img-1.jpg" alt="alt")

                    .about-video__small-descr
                        h4.about-video__small-text Производство
                        .about-video__small-time 00:00:15

                a(data-fancybox href="#myVideo").about-video__img
                    img(src="%=static=%img/assets/about-video/img-2.jpg" alt="alt")

                    .about-video__small-descr
                        h4.about-video__small-text Материалы
                        .about-video__small-time 00:00:55

                    video#myVideo(width='640', height='320', controls='', style='display:none;')
                        source(src='https://www.html5rocks.com/en/tutorials/video/basics/Chrome_ImF.mp4', type='video/mp4')
                        source(src='https://www.html5rocks.com/en/tutorials/video/basics/Chrome_ImF.webm', type='video/webm')
                        source(src='https://www.html5rocks.com/en/tutorials/video/basics/Chrome_ImF.ogv', type='video/ogg')
                        |     Your browser doesn&apos;t support HTML5 video tag.

                a(data-fancybox href="https://www.youtube.com/watch?v=_sI_Ps7JSEk").about-video__img
                    img(src="%=static=%img/assets/about-video/img-3.jpg" alt="alt")

                    .about-video__small-descr
                        h4.about-video__small-text О компании
                        .about-video__small-time 00:01:55




